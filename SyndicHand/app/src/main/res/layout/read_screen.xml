<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_color"
        android:elevation="4dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bar_color"
        android:elevation="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/text_view_name"
            style="@style/DefaultTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Leonardo Viana"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_marginLeft="16dp"
            android:id="@+id/text_view_apartament_number"
            style="@style/DefaultTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="222"
            android:textColor="@android:color/white"
            android:textSize="22sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    card_view:cardBackgroundColor="@color/card_background"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DefaultTextView"
                            android:text="@string/current_gas_register"
                            android:textSize="22sp" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_quantity_gas_old"
                                style="@style/DefaultEditText"
                                android:hint="@string/old_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_quantity_gas"
                                style="@style/DefaultEditText"
                                android:hint="@string/current_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>


                        <Button
                            android:id="@+id/button_save_gas"
                            style="@style/DefaultButton"
                            android:text="@string/save" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- Agua Fria -->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    card_view:cardBackgroundColor="@color/card_background"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DefaultTextView"
                            android:text="@string/current_coldWater_register"
                            android:textSize="22sp" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_cold_water_old"
                                style="@style/DefaultEditText"
                                android:hint="@string/old_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_cold_water"
                                style="@style/DefaultEditText"
                                android:hint="@string/current_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>


                        <Button
                            android:id="@+id/button_save_cold_water"
                            style="@style/DefaultButton"
                            android:text="@string/save" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <!-- Agua Quente -->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    card_view:cardBackgroundColor="@color/card_background"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/DefaultTextView"
                            android:text="@string/current_hotWater_register"
                            android:textSize="22sp" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_hotwater_old"
                                style="@style/DefaultEditText"
                                android:hint="@string/old_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_column="1"
                            app:layout_row="4">

                            <EditText
                                android:id="@+id/edit_text_hotwater"
                                style="@style/DefaultEditText"
                                android:hint="@string/current_register"
                                android:inputType="numberDecimal" />

                        </android.support.design.widget.TextInputLayout>


                        <Button
                            android:id="@+id/button_save_hot_water"
                            style="@style/DefaultButton"
                            android:text="@string/save" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>