<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/status_bar_color</item>
        <item name="android:textColorPrimary">@color/app_bar_text_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionModeBackground">@color/app_bar_color</item>
        <item name="actionModeBackground">@color/app_bar_color</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="titleTextStyle">@style/myTheme.ActionBar.Text</item>
        <item name="android:textSize">@dimen/title_toolbar_size</item>
        <item name="android:textColor">@color/app_bar_text_color</item>
    </style>

    <style name="DefaultTextViewTitleBlack" parent="DefaultTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DefaultTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:alpha">0.54</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultImageViewGrid">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="DefaultButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_default_selector</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_gravity">right|bottom</item>
    </style>

    <style name="SecundaryButton" parent="DefaultButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/ColorPrimary</item>
    </style>

    <style name="DefaultFab">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">@color/colorAccentLight</item>
        <item name="rippleColor">@color/colorAccentDark</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/text_instance_color</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SimpleTextInputLayout">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialog_background_color</item>
        <item name="android:colorAccent">@color/dialog_button_text_color</item>
        <item name="colorAccent">@color/dialog_button_text_color</item>
        <item name="android:textColorPrimary">@color/dialog_content_color</item>
    </style>

    <style name="AppCompatProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dialog_button_text_color</item>
        <item name="android:colorAccent">@color/dialog_button_text_color</item>
        <item name="colorAccent">@color/dialog_button_text_color</item>
        <item name="android:textColorPrimary">@color/dialog_content_color</item>
    </style>



    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>
